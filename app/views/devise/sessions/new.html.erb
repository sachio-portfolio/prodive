<div class="signup-in-wrap">
  <div class="form-box">
    <h2><%= t('.sign_in') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
        <i class="fa fa-envelope"></i>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
        <i class="fa fa-key"></i>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="pt-2 pb-2 remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="pt-2 pb-3 d-flex justify-content-around">
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to omniauth_authorize_path(resource_name, provider), class: "oauth-google" do %>
              <%= t('.sign_in_with_provider', provider: OmniAuth::Utils.camelize(provider)) %><i class="fas fa-angle-right"></i>
            <% end %>
          <% end %>
        <% end %>
        <%= f.submit t('.sign_in') %>
      </div>
    <% end %>
    <div class="pt-3">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to t(".forgot_your_password"), new_password_path(resource_name), class: "links" %>
      <% end %>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to t(".sign_up"), new_registration_path(resource_name), class: "links" %>
      <% end %>
    </div>
  </div>
</div>
