<div class="signup-in-wrap">
  <div class="form-box">
    <h2><%= t('.change_your_password') %></h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="field">
        <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        <i class="fa fa-key"></i>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        <i class="fa fa-key"></i>
      </div>
      <div class="pt-2 pb-3 d-flex justify-content-around">
        <%= f.submit t('.change_my_password') %>
      </div>
    <% end %>
    <div class="">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
