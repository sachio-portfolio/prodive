<span id="favorite-part">
  <% if favorite.present? %>
    <%= link_to favorite_path(id: favorite.id), method: :delete, remote: true do %>
      <i class="fas fa-laugh-squint favorite-icon" data-toggle="tooltip" data-placement="right" title="お気に入り中"></i>
    <% end %>
  <% else %>
    <%= link_to favorites_path(divesite_id: divesite.id), method: :post, remote: true do %>
      <i class="far fa-meh favorite-icon" data-toggle="tooltip" data-placement="right" title="お気に入りにする"></i>
    <% end %>
  <% end %>
</span>
