<div class="container-fluid mypage-top-wrap">
  <div class="row mypage-top">
      <%= image_tag set_avatar, class: 'avatar-image-top'%>
      <div class="mask-gradation"></div>
    <h2><span style="font-size:1.2em;"><%= "#{@user.name} " %></span></h2>
    <aside class="col-sm-4 col-lg-2 floating-board">
      <div class="">
        <%= image_tag set_avatar, class: 'avatar-image'%>
      </div>
      <nav class="side-menu">
        <ul>
          <li class="p-4"><%= link_to 'プロフィール', myprofile_user_path(current_user.id), remote: true %></li>
          <li class="p-4"><%= link_to 'お気に入り', myfavorite_user_path(current_user.id), remote: true %></li>
          <li class="p-4"><%= link_to '投稿一覧', mypost_user_path(current_user.id), remote: true %></li>
        </ul>
      </nav>
    </aside>
  </div>
</div>
<div class="container-fluid wrapper">
  <div class="row">
    <div class="col-sm-5 col-lg-3 empty-element"></div>
    <article class="col-sm-7 col-lg-9">
      <div id="maypage-content">
        <%= render 'myprofile', user: @user %>
      </div>
    </article>
  </div>
</div>
