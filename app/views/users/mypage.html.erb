<div class="container-fluid mypage-top-wrap">
  <div class="row mypage-top">
      <%= image_tag(set_avatar_helper, class: 'avatar-image-top') %>
      <div class="mask-gradation"></div>
    <p class="user-name-wrap"><span class="user-name"><%= "#{@user.name} " %></span><span class="user-follower-count"><%= @user.follower_user.count %> フォロー</span></p>
    <aside class="col-sm-4 col-md-4 col-lg-3 floating-board">
      <a class="close-btn" href="#">
        <i class="fas fa-window-close"></i>
      </a>
      <div>
        <%= image_tag(set_avatar_helper, class: 'avatar-image') %>
      </div>
      <nav class="side-menu">
        <ul>
          <li class="p-4 mymenu currently-selected"><%= link_to 'お気に入り / フォロー中', myfavorite_user_path(current_user.uid), class: "mymenu-link", remote: true %></li>
          <li class="p-4 mymenu"><%= link_to '自分の投稿一覧', mypost_user_path(current_user.id), class: "mymenu-link", remote: true %></li>
          <li class="p-4 mymenu"><%= link_to 'プロフィール', myprofile_user_path(current_user.uid), class: "mymenu-link", remote: true %></li>
        </ul>
      </nav>
    </aside>
    <a class="sidemenu-btn" href="#">
      <i class="fas fa-bars"> マイページメニュー</i>
    </a>
  </div>
</div>
<div class="container-fluid wrapper">
  <div class="row">
    <div class="empty-element"></div>
    <article class="">
      <div id="mypage-content">
        <%= render 'myfavorite', {user: @user, favorites: @favorites, followed: @followed} %>
      </div>
    </article>
  </div>
</div>
